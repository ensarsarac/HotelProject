
@model List<ResultSendMessageDto>

@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="email-left-box">
                    <a href="/ContactAdmin/AddSendMessage/" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>
                    @await Component.InvokeAsync("SideBarAdminContact")
                    @await Html.PartialAsync("/Views/ContactAdmin/SideBarAdminContactCategoryPartial.cshtml")

                </div>
                <div class="email-right-box">
                    <div role="toolbar" class="toolbar">
                        <div class="btn-group">
                            <button aria-expanded="false" data-toggle="dropdown" class="btn btn-dark dropdown-toggle" type="button">
                                Giden Mesajlar <span class="caret m-l-5"></span>
                            </button>

                        </div>
                    </div>
                    <div class="email-list m-t-15">
                        @foreach (var item in Model)
                        {
                            <div class="message">
                                <a href="/ContactAdmin/SendBoxReadMailById/@item.SendMessageID">
                                    <div class="col-mail col-mail-1">
                                        <div class="email-checkbox">
                                            <input type="checkbox" id="chk2">
                                            <label class="toggle" for="chk2"></label>
                                        </div><span class="star-toggle ti-star"></span>
                                    </div>
                                    <div class="col-mail col-mail-2">
                                        @if (item.Content.Length < 100)
                                        {
                                        <div class="subject"><b>Alıcı: </b> @item.SenderName | <b>Konu: </b> @item.Title</div>
                                        }
                                        else
                                        {
                                    <div class="subject"><b>Alıcı: </b> | @item.SenderName | <b>Konu: </b> @item.Title.Substring(0, 100) ...</div>
                                        }
                                        <div class="date"> @item.Date.ToShortDateString()</div>
                                    </div>
                                </a>
                            </div>
                        }


                    </div>
                    <!-- panel -->
                    <div class="row">
                        <div class="col-7">
                            <div class="text-left">1 - 20 of @Model.Count()</div>
                        </div>
                        <div class="col-5">
                            <div class="btn-group float-right">
                                <button class="btn btn-gradient" type="button">
                                    <i class="fa fa-angle-left"></i>
                                </button>
                                <button class="btn btn-dark" type="button">
                                    <i class="fa fa-angle-right"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
