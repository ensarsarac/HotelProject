
@model CreateNewUserDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html class="h-100" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Kayıt Ol Paneli</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/adminweb/assets/images/favicon.png">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" >
    <link href="~/adminweb/css/style.css" rel="stylesheet">

</head>

<body class="h-100">

    <div class="login-form-bg h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100">
                <div class="col-xl-6">
                    <div class="form-input-content">
                        <div class="card login-form mb-0">
                            <div class="card-body pt-5">

                                <a class="text-center" href="index.html"> <h4>Kayıt Oluştur</h4></a>

                                <form method="post" class="mt-5 mb-5 login-input">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <input type="text" asp-for="@Model.Name" class="form-control" placeholder="Adınız">
                                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" asp-for="@Model.Surname" class="form-control" placeholder="Soyadınız" >
                                        <span asp-validation-for="@Model.Surname"class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" asp-for="@Model.Username" class="form-control" placeholder="Kullanıcı Adı" >
                                        <span asp-validation-for="@Model.Username"class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="email" asp-for="@Model.Mail" class="form-control" placeholder="Email" >
                                        <span asp-validation-for="@Model.Mail"class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" asp-for="@Model.Password" class="form-control" placeholder="Şifre" >
                                        <span asp-validation-for="@Model.Password"class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" placeholder="Şifre Tekrar" >
                                        <span asp-validation-for="@Model.ConfirmPassword"class="text-danger"></span>
                                    </div>
                                    <button class="btn login-form__btn submit w-100">Kayıt Ol</button>
                                </form>
                                <p class="mt-5 login-form__footer">Zaten bir hesabın var mı?<a href="/Login/Index/" class="text-primary"> Giriş Yap </a> </p>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>




    <!--**********************************
        Scripts
    ***********************************-->
    <script src="~/adminweb/plugins/common/common.min.js"></script>
    <script src="~/adminweb/js/custom.min.js"></script>
    <script src="~/adminweb/js/settings.js"></script>
    <script src="~/adminweb/js/gleek.js"></script>
    <script src="~/adminweb/js/styleSwitcher.js"></script>
</body>
</html>





