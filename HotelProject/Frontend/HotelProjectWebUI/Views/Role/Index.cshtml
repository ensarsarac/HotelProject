
@model List<HotelProjectEntityLayer.Concrete.AppRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="card-title">
            <h4>Rol Listesi</h4>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Rol Adı</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td><a href="/Role/DeleteRole/@item.Id" class="btn btn-danger">Sil</a></td>
                            <td><a href="/Role/UpdateRole/@item.Id" class="btn btn-warning">Güncelle</a></td>
                        </tr>
                    }



                </tbody>
            </table>
        </div>
    </div>
</div>

<a href="/Role/AddRole/" class="btn btn-rounded btn-outline-info">Rol Ekle</a>